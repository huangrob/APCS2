import java.util.*;
public class FracCalc {
	
	public static void main (String[] args){
		Scanner userInput = new Scanner(System.in);
		while (!userInput.equals("quit")){
			System.out.println("Enter two mixed fractions separated by spaces and an operator.");
			String mixedFraction = userInput.nextLine();
			String[] produceAnswer = mixedFraction.split(" ");
			System.out.println(produceAnswer[2]);
			System.out.println("if you wish to quit, type quit");
		}
		
		
		
	}

}
